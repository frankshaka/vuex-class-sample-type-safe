{
    "compilerOptions": {
        "target": "es5",
        "lib": [ "es2015", "dom" ],
    
        // Suppress warnings for using decorators
        "experimentalDecorators": true,
        "importHelpers": true,
    
        "baseUrl": ".",
        "paths": {
          "~/*": ["./src/*"],
          "~types/*": ["./types/*"]
        },
    
        "typeRoots": ["./node_modules/@types", "./types"],

        "noImplicitAny": true
    }
}